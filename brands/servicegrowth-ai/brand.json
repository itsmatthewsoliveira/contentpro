{
  "name": "ServiceGrowth AI",
  "tagline": "Built by operators, not grifters",
  "website": "servicegrowth.ai",
  
  "colors": {
    "primary": {
      "background": "#0D0D0D",
      "backgroundAlt": "#1A1A1A",
      "card": "rgba(30, 30, 30, 0.8)",
      "cardBorder": "rgba(255, 255, 255, 0.1)"
    },
    "accent": {
      "cyan": "#00D4FF",
      "cyanGlow": "rgba(0, 212, 255, 0.3)",
      "teal": "#00B4D8"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B0B0B0",
      "muted": "#666666"
    }
  },
  
  "typography": {
    "headlineFont": "Inter",
    "headlineFontWeight": "800",
    "bodyFont": "Inter",
    "bodyFontWeight": "400",
    "accentFont": "Inter",
    "sizes": {
      "heroHeadline": "48px",
      "slideHeadline": "32px",
      "subheadline": "20px",
      "body": "16px",
      "caption": "12px"
    }
  },
  
  "visualStyle": {
    "aesthetic": "Tech-forward, personal brand, insider knowledge",
    "reference": "Oliver Merrick style",
    "elements": [
      "Glassmorphism cards with subtle blur",
      "Floating app icons (ChatGPT, Notion, Slack, n8n, GoHighLevel)",
      "Dark backgrounds with depth",
      "Cyan/teal accent highlights on key words",
      "Personal photos mixed with tech ecosystem",
      "Rounded corners on cards (16px radius)",
      "Subtle glow effects on accent elements"
    ],
    "layouts": [
      "card-on-blur: Text card floating over blurred photo background",
      "full-photo-overlay: Full bleed photo with glassmorphism text overlay",
      "icon-diagram: Flowchart style with app icons and arrows",
      "split-content: Photo on one side, text card on other"
    ],
    "cardStyle": {
      "background": "rgba(30, 30, 30, 0.85)",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "borderRadius": "16px",
      "backdropBlur": "20px",
      "padding": "32px"
    }
  },
  
  "contentVoice": {
    "tone": "Direct, confident, insider knowledge",
    "perspective": "First person - sharing what actually works",
    "hooks": [
      "Most people [do X]. I [do Y].",
      "I spent $X on [thing]. Here's what I learned.",
      "Here's the [number]-step system I use for [result].",
      "[Controversial statement]. Here's why."
    ],
    "ctaStyle": "Comment '[word]' to get the full guide"
  },
  
  "appIcons": [
    { "name": "ChatGPT", "icon": "chatgpt-icon.svg" },
    { "name": "Claude", "icon": "claude-icon.svg" },
    { "name": "Notion", "icon": "notion-icon.svg" },
    { "name": "Slack", "icon": "slack-icon.svg" },
    { "name": "n8n", "icon": "n8n-icon.svg" },
    { "name": "GoHighLevel", "icon": "gohighlevel-icon.svg" },
    { "name": "Gmail", "icon": "gmail-icon.svg" },
    { "name": "Figma", "icon": "figma-icon.svg" }
  ],
  
  "postTypes": {
    "educationalCarousel": {
      "description": "Multi-slide carousel teaching a concept or system",
      "slideCount": "7-10 slides",
      "structure": [
        "Hook slide with bold statement + personal photo",
        "Problem/context slides",
        "Solution/framework slides with icons",
        "Implementation details",
        "Results/proof",
        "CTA slide"
      ]
    },
    "toolShowcase": {
      "description": "Highlighting AI tools and how to use them",
      "elements": ["Floating app icons", "Screenshot integration", "Step-by-step flow"]
    },
    "behindTheScenes": {
      "description": "Showing actual workflows and systems",
      "elements": ["Screen recordings styled", "Dashboard screenshots", "Real data"]
    }
  },
  
  "instagram": {
    "dimensions": {
      "square": { "width": 1080, "height": 1080 },
      "portrait": { "width": 1080, "height": 1350 }
    },
    "safeZones": {
      "top": 60,
      "bottom": 60,
      "left": 40,
      "right": 40
    }
  }
}
